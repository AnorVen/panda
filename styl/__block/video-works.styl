.video__works {
  wrapper();
  .work {
    &__list {
      display flex;
      flex-wrap wrap;
      justify-content: left;
      text-align center
    }
    &__item {
      width: calc(25% - 30px);
      margin 15px;
      @media tablet-width {
        width: calc(33% - 30px)
      }
      @media mobile-width {
        width: calc(50% - 30px)
      }
      @media micro-width {
        width: calc(100% - 30px)
      }

      .video {
        position: relative;
        padding-bottom: 56.25%; /* задаёт высоту контейнера для 16:9 (если 4:3 — поставьте 75%) */
        padding-top: 30px;
        height: 0;
        overflow: hidden;
      }
      .video iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
      }
    }
  }
}

.all_video.video__works {
  .work__list {
    .work__item {
      @media tablet-width {
        width: calc(33% - 30px)
      }
      @media mobile-width {
        width: calc(50% - 30px)
      }
      @media micro-width {
        width: calc(100% - 30px)
      }
    }
  }
}