.slider {
  .item-video {
    position: relative;
    padding-bottom: 56.25%; /* задаёт высоту контейнера для 16:9 (если 4:3 — поставьте 75%) */

    padding-top: 30px;
    height: 0;
    overflow: hidden;
  }
  .item-video iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
&.owl-theme .owl-dots .owl-dot span{
  border-radius 0;
  width: 20px;
  height: 20px;
  border: 2px solid #313332;
  background-color: rgba(0,0,0,0);
}
  &.owl-theme .owl-dots .owl-dot.active span{
    background-color: #313332;
  }

&.owl-theme .owl-nav .owl-prev{
  position: absolute;
  top: 37%;
  left: 20px;
  font-size: 0;
  border-radius: 0;
  padding: 0;
  padding-right: 20px;
  padding-top: 20px;
  background-color: rgba(0,0,0,0);
  border-right: 2px solid #d3cfcf;
  border-top: 2px solid #d3cfcf;
  transform: rotate(230deg);
}
  &.owl-theme .owl-nav .owl-next{
    position: absolute;
    top: 37%;
    right: 20px;
    font-size: 0;
    border-radius: 0;
    padding: 0;
    padding-right: 20px;
    padding-top: 20px;
    background-color: rgba(0,0,0,0);
    border-right: 2px solid #d3cfcf;
    border-top: 2px solid #d3cfcf;
    transform: rotate(50deg);
  }



}