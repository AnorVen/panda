.body {
  margin: 0;
  line-height: normal;
  font-family: "Roboto", "Helvetica", "Arial", sans-serif;
  width: 100%;
  color: #313332;
}

a {
  text-decoration none;
  color: #313332;
}
a:visited{
  color: #313332;
}
  img{
    max-width: 100%;
  }
.visually-hidden {
  position: absolute;
  width: 1px;
  height: 1px;
  margin: -1px;
  padding: 0;
  border: 0;
  clip: rect(0 0 0 0);
  overflow: hidden;
}
.section__title{
  font-size: 24px;
  margin: 20px auto;
  width: 30%;
  border-bottom: 2px solid #bfbfbf;
  text-align center;
  margin-bottom: 70px;
  @media mobile-width{
    width: 50%;
  }

  span{
    position: relative;
    top: 24px;
    display: inline-block;
    background-color: #fff;
    padding: 10px 20px;
    text-transform: uppercase;
    @media tablet-width{
      padding: 10px 0;
    }
      @media mobile-width{
        padding: 10px 10px;
      }
  }
}
  .section__link{
    text-align: center;
    margin: 20px;

    a{
      font-size: 34px;
      text-transform: uppercase;
      padding: 20px;
      margin: 20px;
      position: relative;
      color #8BACC6;
    }
    a:before{
      position: absolute;
      top: 28px;
      right: -20px;
      content: '';
      border: 13px solid transparent;
      border-left: 15px solid #8BACC6;
    }
  }